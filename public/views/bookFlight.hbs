        document.getElementById('searchTwo-type').innerHTML = data.philadelphia.event[1].type
        document.getElementById('searchTwo-onclick').setAttribute("onclick", "saveFile('Huntsville, AL - Philadelphia, PA', document.getElementById('searchTwo-date'), document.getElementById('searchTwo-type'), 'HSV-PHL')")

        document.getElementById('searchThree').style.display = "block"
        document.getElementById('searchThree-location').innerHTML = "Huntsville, AL - Philadelphia, PA"
        document.getElementById('searchThree-date').innerHTML = data.philadelphia.event[2].date + " | " + data.philadelphia.event[2].time
        document.getElementById('searchThree-type').innerHTML = data.philadelphia.event[2].type
        document.getElementById('searchThree-onclick').setAttribute("onclick", "saveFile('Huntsville, AL - Philadelphia, PA', document.getElementById('searchThree-date'), document.getElementById('searchThree-type'), 'HSV-PHL')")

        document.getElementById('searchFour').style.display = "block"
        document.getElementById('searchFour-location').innerHTML = "Huntsville, AL - Philadelphia, PA"
        document.getElementById('searchFour-date').innerHTML = data.philadelphia.event[3].date + " | " + data.philadelphia.event[3].time
        document.getElementById('searchFour-type').innerHTML = data.philadelphia.event[3].type
